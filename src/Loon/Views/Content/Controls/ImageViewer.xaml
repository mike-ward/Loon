<Window
  x:Class="Loon.Views.Content.Controls.ImageViewer"
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:controls="clr-namespace:Loon.Views.Content.Controls"
  d:DesignHeight="300"
  d:DesignWidth="300"
  Background="Transparent"
  PointerPressed="HideWindow"
  PointerWheelChanged="OnPointerWheelChanged"
  ShowInTaskbar="False"
  SystemDecorations="None"
  Topmost="True"
  TransparencyLevelHint="Transparent"
  TransparencyBackgroundFallback="{DynamicResource ThemeBackgroundBrush}"
  WindowStartupLocation="CenterScreen"
  Width="{Binding Source.Size.Width, RelativeSource={RelativeSource Self}, FallbackValue=100}"
  Height="{Binding Source.Size.Height, RelativeSource={RelativeSource Self}, FallbackValue=100}"
  mc:Ignorable="d">

  <Image Source="{Binding $parent[controls:ImageViewer].Source}" />
</Window>