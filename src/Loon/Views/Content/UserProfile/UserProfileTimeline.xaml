<UserControl
  x:Class="Loon.Views.Content.UserProfile.UserProfileTimeline"
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:tl="clr-namespace:Loon.Views.Content.Timelines"
  xmlns:tv="clr-namespace:Loon.ViewModels.Content.Timelines"
  xmlns:u="clr-namespace:Loon.Views.Content.UserProfile"
  d:DesignHeight="450"
  d:DesignWidth="300"
  mc:Ignorable="d">

  <tl:TimelineView
    Name="{x:Static u:UserProfileTimeline.UserTimelineName}"
    DataContext="{Binding Source={x:Type tv:UserProfileTimelineViewModel}, Converter={StaticResource VML}, Mode=OneTime}" />
</UserControl>