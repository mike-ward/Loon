<UserControl
  x:Class="Loon.Views.Content.AppSettings.SettingsTips"
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:l="clr-namespace:Loon.Views.Content.AppSettings"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  d:DesignHeight="450"
  d:DesignWidth="210"
  mc:Ignorable="d">

  <StackPanel>
    <TextBlock
      Margin="0,0,0,6"
      FontWeight="Bold"
      Text="{StaticResource tips}" />

    <l:BulletItem BulletText="{StaticResource tips-scroll}" />
    <l:BulletItem BulletText="{StaticResource tips-open}" />
    <l:BulletItem BulletText="{StaticResource tips-font-size}" />
    <l:BulletItem BulletText="{StaticResource tips-ctrl-n}" />
  </StackPanel>
</UserControl>