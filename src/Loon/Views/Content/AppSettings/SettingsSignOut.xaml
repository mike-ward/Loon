<UserControl
  x:Class="Loon.Views.Content.AppSettings.SettingsSignOut"
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:l="clr-namespace:Loon"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  d:DesignHeight="50"
  d:DesignWidth="210"
  mc:Ignorable="d">
  <Button
    Width="100"
    Command="{Binding Signout, Source={x:Static l:App.Commands}, Mode=OneTime}"
    Content="{StaticResource sign-out}" />
</UserControl>