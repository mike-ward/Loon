<UserControl
  x:Class="Loon.Views.Content.AppSettings.SettingsFontSize"
  x:DataType="models:Settings"
  x:CompileBindings="True"
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:models="clr-namespace:Loon.Models"
  d:DesignHeight="100"
  d:DesignWidth="210"
  mc:Ignorable="d">

  <StackPanel
    Spacing="10"
    Orientation="Horizontal"
    HorizontalAlignment="Center">
    <TextBlock
      Text="{StaticResource font-size-title}"
      VerticalAlignment="Center" />
    <NumericUpDown
      MinWidth="100"
      Minimum="10"
      Maximum="50"
      Increment="0.1"
      Value="{Binding FontSize, Converter={StaticResource RoundTo}}" />
  </StackPanel>
</UserControl>